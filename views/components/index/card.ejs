<div class="modal fade" id="card" tabindex="-1" aria-labelledby="cardModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="cardModalLabel">Thông tin truyện</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <!-- Bên trái: Thông tin truyện -->
                    <div class="col-md-4">
                        <div class="card mb-3" style="max-width: 540px;">
                            <div class="row g-0">
                                <div class="col-md-12">
                                    <img src="..." class="img-fluid rounded-start" alt="..." id="comicImage">
                                </div>
                                <div class="col-md-12">
                                    <div class="card-body">
                                        <h5 class="card-title" id="comicTitle">Tên truyện</h5>
                                        <p class="card-text" id="comicAuthor">Tên tác giả.</p>
                                        <p class="card-text" id="comicGenre">Thể loại.</p>
                                        <p class="card-text"><small class="text-body-secondary" id="comicContent">Nội dung truyện</small></p>
                                        <!-- Nút Chia sẻ -->
                                        <button type="button" class="btn btn-outline-primary mt-2" id="shareComicBtn">
                                            <i class="bi bi-share"></i> Chia sẻ
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Bên phải: Thanh tìm kiếm và danh sách chương -->
                    <div class="col-md-8">
                        <h5>Danh sách chương</h5>
                        <!-- Thêm hai nút Đọc từ đầu và Đọc chương mới nhất -->
                        <div class="mb-3">
                            <button type="button" class="btn btn-primary me-2" id="readFromStartBtn">Đọc từ đầu</button>
                            <button type="button" class="btn btn-primary" id="readLatestChapterBtn">Đọc chương mới nhất</button>
                        </div>
                        <form class="d-flex mb-3" role="search" id="chapterSearchForm">
                            <input class="form-control me-2" type="search" placeholder="Tìm chương truyện của bạn" aria-label="Search" id="chapterSearchInput">
                            <button class="btn btn-outline-success" type="submit" style="width: 70px;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0"/>
                                </svg>
                            </button>
                        </form>
                        <div class="accordion chapter-scroll-container" id="chapterAccordion" style="max-height: 400px; overflow-y: auto;">
                            <!-- Danh sách chương sẽ được render động bởi chapter.js -->
                        </div>
                    </div>
                </div>
    
                <!-- Modal đọc truyện -->
                <div class="modal fade" id="doctruyen" tabindex="-1" aria-labelledby="doctruyenModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-fullscreen">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="doctruyenModalLabel">Tên chương</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body"></div>
                            <div class="modal-footer"></div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
            </div>
        </div>
    </div>
</div>